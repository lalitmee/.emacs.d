#!/bin/bash

while true; do
    read -p "Enter the first number" a
    read -p "Enter the second number" b

    select ans in add subtract multiply divide; do
	case $ans in
	    add) op='+';
		 break;;

	    subtract) op='-';
		      break;;

	    multiply) op='*';
		      break;;
	    divide) op='/';
		    break;;
	esac
    done

    ans=$(echo "$a $op $b" | bc -l)
    printf "%s %s %s = %s\n\n" "$a" "$op" "$b" "$ans"
done
